<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <ImageView
        android:id="@+id/video_thumb"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@id/video_thumb"
        android:layout_toRightOf="@id/video_thumb"
        android:text="Nanjing"/>
    <TextView
        android:id="@+id/video_publish_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/video_thumb"
        android:layout_below="@id/video_title"
        android:text="Nanjing"/>
    <TextView
        android:id="@+id/video_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignBottom="@id/video_thumb"
        android:layout_alignRight="@id/video_thumb"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text="4:46"
        android:textColor="@android:color/white"
        android:background="@android:color/black"/>
</RelativeLayout>